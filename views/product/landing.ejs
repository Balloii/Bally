  <div class="album py-5 bg-light">
    <div class="container">

      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          Price
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="/sort-low-to-high">Low - High</a></li>
          <li><a class="dropdown-item" href="/sort-high-to-low">High - Low</a></li>
        </ul>
      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% products.forEach(function(products){ %>
        <div class="col">
          <div class="card shadow-sm">
            <img src="<%= products.image %>" height="300px" class="products-image"> <!-- หากเกี่ยวกับการแสดงผลจะมี = อยู่ใน <%= %> -->
            <div class="card-body">
              <p class="card-text">Name: <%= products.Name %></p>
              <p class="card-text">Price: <%= products.Price %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/<%= products._id %>" class="btn btn-sm btn-outline-secondary">View</a> <!--กดแล้วจะเข้าไปดูสินค้าที่เป็น id นั้นๆ-->
                  <a href="/<%= products._id %>/Add_to_cart" class="btn btn-sm btn-outline-secondary">Add to cart</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>      
      </div>
    </div>
  </div>
